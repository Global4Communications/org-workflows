<?xml version="1.0"?>
<ruleset name="CustomRuleset">
    <rule ref="PSR12" />

    <!-- Apply a custom rule for Test.php files -->
    <rule ref="PSR12">
        <include-pattern>**/*Test.php</include-pattern>
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps" />
    </rule>

    <!-- Exclude namespace rule for migrations -->
    <rule ref="PSR12">
        <include-pattern>database/migrations/*</include-pattern>
        <include-pattern>database/seeds/*</include-pattern>
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace" />
    </rule>    
</ruleset>
